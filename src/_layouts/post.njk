<article class="blog-post">
    <div class="back-to-blog">
        <a href="/blog/" hx-get="/blog/blog-content.html" hx-target="#main-content" hx-push-url="false">&larr; Back to Blog</a> | <a href="/">Home</a>
    </div>
    
    <header>
        <h1>{{ title }}</h1>
        <div class="blog-meta">
            Published on {{ date | dateDisplay }}
            {% if tags %}
                â€¢ Tags: {% for tag in tags %}{{ tag }}{% if not loop.last %}, {% endif %}{% endfor %}
            {% endif %}
        </div>
    </header>
    
    <div class="blog-content">
        {{ content | safe }}
    </div>
</article>